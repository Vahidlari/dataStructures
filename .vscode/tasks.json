{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-chapter1-tests",
      "type": "shell",
      "command": "./build.sh",
      "args": [
        "-p", "chapter1",
        "-c", "${input:cleanBuild}",
        "-t", "${input:enableTests}"
      ],
      "options": {
        "cwd": "${workspaceFolder}/crackingCodingInterviews"
      },
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "cleanBuild",
      "type": "pickString",
      "description": "Clean build directory?",
      "options": ["true", "false"],
      "default": "false"
    },
    {
      "id": "enableTests",
      "type": "pickString",
      "description": "Enable testing?",
      "options": ["true", "false"],
      "default": "false"
    }
  ]
}
